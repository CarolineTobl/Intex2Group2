@using Intex2Group2.Infrastructure;
@using Intex2Group2.Data.Scaffolded;

@{
    ViewData["Title"] = "ProjectSummary";
}

@model Product


<div class="card m-1 p-1">
    <h4>
        @Model.Name
        <span class="badge rounded-pill bg-primary text-white float-end"><small>$@Model.Price </small></span>
    </h4>

    <ul>
        <li>Product Type: @Model.Name</li>
        <li>Regional Program: @Model.Year</li>
        <img src="@Model.ImgLink" width="200px"/>

    </ul>

    <form id=@Model.ProductId method="post" asp-page="/Cart">
        <input type="hidden" asp-for="ProductId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <button type="submit" class="btn-outline-success btn-sm float-end">Add to Cart</button>
    </form>
    
</div>

